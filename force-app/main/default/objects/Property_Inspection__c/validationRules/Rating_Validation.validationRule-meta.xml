<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rating_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Inspection_Status__c, &apos;Completed&apos;  ),ISBLANK(Overall_Rating__c) )</errorConditionFormula>
    <errorMessage>Rating field is required when Status is &quot;Completed&quot;</errorMessage>
</ValidationRule>
